// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

// Merchant credentials for standalone dashboard authentication
model Merchant {
  id           String   @id @default(cuid())
  shopDomain   String   @unique // e.g., "idealfit-2.myshopify.com"
  username     String   @unique
  passwordHash String   // bcrypt hashed password
  email        String?
  shopifyAccessToken String? // per-merchant Shopify Admin API token
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Size charts for merchant stores
model SizeChart {
  id        String   @id @default(cuid())
  shop      String   @unique
  title     String   @default("Size Chart")
  chartData String   // JSON string of size chart data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
