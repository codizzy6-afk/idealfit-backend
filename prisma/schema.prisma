// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

// Merchant credentials for standalone dashboard authentication
model Merchant {
  id           String   @id @default(cuid())
  shopDomain   String   @unique // e.g., "idealfit-2.myshopify.com"
  username     String   @unique
  passwordHash String   // bcrypt hashed password
  email        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Size charts for merchant stores
model SizeChart {
  id        String   @id @default(cuid())
  shop      String   @unique
  title     String   @default("Size Chart")
  chartData String   // JSON string of size chart data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Invoices for billing tracking
model Invoice {
  id             String   @id @default(cuid())
  shop           String   // Shop domain
  invoiceNumber  String   @unique // e.g., "INV-202501"
  month          String   // YYYY-MM format
  orderCount     Int      @default(0)
  pricePerOrder  Float    @default(0.12)
  total          Float    @default(0)
  totalINR       Float    @default(0)
  currency       String   @default("USD")
  tier           String   @default("Starter")
  status         String   @default("pending") // pending, paid, overdue
  paymentMethod  String?  // stripe, razorpay, bank_transfer
  paymentId      String?  // External payment ID from Stripe/Razorpay
  paidAt         DateTime?
  dueDate        DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Customer measurement submissions
model Submission {
  id              String   @id @default(cuid())
  shop            String   // Shop domain
  customerName    String   @default("Anonymous")
  productId       String?
  bust            Float
  waist           Float
  hip             Float
  recommendedSize String
  orderId         String?
  email           String?
  phone           String?
  address         String?
  city            String?
  state           String?
  country         String?
  date            DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
